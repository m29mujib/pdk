{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",

    // ðŸ‘‡ WAJIB untuk @tailwindcss/vite (.mts modules)
    "moduleResolution": "bundler",

    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,

    // ðŸ‘‡ pengganti resmi importsNotUsedAsValues/preserveValueImports
    "verbatimModuleSyntax": true,

    "types": ["vite/client"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "allowJs": true
  },
  "references": [
    {
      "path": "./tsconfig.vite-config.json"
    }
  ]
}
